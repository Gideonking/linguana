<!DOCTYPE html>
<html>
<head>
  <title>LinguanaApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if logged_in? %>
  Hi, <%= current_user.username %>!
<% end %>

<% flash[:errors].each do |error|  %>
