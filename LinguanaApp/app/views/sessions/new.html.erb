<h1>Sign In</h1>

<form action="<%= session_url %>" method="post">
  <%= auth_token_input %>
  
  <label for="session-username">Username:</label>
  <input id="session-username" name="session[username]">

  <label for="session-password">Password:</label>
  <input type="password" id="session-password" name="session[password]">

  <input type="submit" value="Submit">
</form>

<h3>Not a member yet?</h3>
<form action="<%= new_user_url %>" method="get">
  <input type="submit" value="Click Here"> <h3>to sign up.</h3>
